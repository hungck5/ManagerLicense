{
  "ReverseProxy": {
    "Routes": {
      "product_route": {
        "ClusterId": "product_cluster",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "order_route": {
        "ClusterId": "order_cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "auth_route": {  
        "ClusterId": "auth_cluster",  
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          },
          { "RequestHeaderOriginalHost": "true" },
          {
            "X-Forwarded": "Set"
          }
        ]
      },
      "auth_connect_route": {  
        "ClusterId": "auth_cluster",  
        "Match": {
          "Path": "/connect/{**catch-all}"
        }
        
      },
      "auth_account_route": {  
        "ClusterId": "auth_cluster",  
        "Match": {
          "Path": "/account/{**catch-all}"
        }
        
      }
    },
    "Clusters": {
      "product_cluster": {
        "Destinations": {
          "product_api": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "order_cluster": {
        "Destinations": {
          "order_api": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "auth_cluster": { 
        "Destinations": {
          "auth_service": {
            "Address": "https://localhost:7015/"
          }
        }
      }
    }
  }
}
